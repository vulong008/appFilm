<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/line_NewFilm"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp">

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/imgFilm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background"></ImageView>

        <LinearLayout
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTenphim"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Phim"
                android:lines="2"
                android:textColor="@color/white"
                android:textSize="20dp"></TextView>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/iconclock"></ImageView>

                <TextView
                    android:id="@+id/txtThoiluongphim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời lượng phim"
                    android:textColor="@color/white"
                    android:textSize="15dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconMac"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:src="@drawable/iconmac"></ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">
                    <Button
                        android:id="@+id/btnDatve"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="right"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:background="@drawable/oval"
                        android:text="Đặt vé"
                        android:textSize="10sp"></Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>